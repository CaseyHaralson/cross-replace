{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
  "overrides": [],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "plugins": ["@typescript-eslint"],
  "ignorePatterns": ["node_modules", "dist"],
  "rules": {
    "@typescript-eslint/no-var-requires": 0
  },
  "globals": {
    "require": true
  }
}
